//- Navbar mixins
mixin nav(name)
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href='#')= name
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarSupportedContent
            block

mixin nav_block_left()
    ul.navbar-nav.mr-auto
        block

mixin nav_block_right()
    ul.navbar-nav
        block

mixin nav_item(href, active)
    li.nav-item
        block
 
mixin nav_item_dropdown(name)
    li.nav-item.dropdown
        a.nav-link.dropdown-toggle#navbarDropdown(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')= name
        block
 
//- End navbar mixins

