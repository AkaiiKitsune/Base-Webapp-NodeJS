extends ../layout

block content
    form(method='POST', action='/users/login')
        .card
            .card-header
                h4 Login
            .card-body
                .row
                    .col.my-3
                        .input-group
                            .input-group-prepend
                                .input-group-text
                                    .fas.fa-user-circle
                            input.form-control#inlineFormInputGroupUsername(name='username', type='text', placeholder='Nom d\'utilisateur', required)
                    .col.my-3
                        .input-group
                            .input-group-prepend
                                .input-group-text
                                    .fas.fa-unlock
                            input.form-control#inlineFormInputName(name='password', type='password', placeholder='Mot de passe', required)

            .card-footer.text-center
                button.btn.btn-primary.mr-2(type='submit') Se connecter
                button.btn.btn-danger(type='button', onclick="window.location.href='/users/register';") S'inscrire
