include ./mixins

doctype html
html
    head
        link(rel="stylesheet", href="/css/style.css")

        //-   Bootstrap and stuff   -//
        script(src="/js/jquery-3.5.1.min.js")
        script(src="/js/popper.min.js")
        script(src="/js/bootstrap.min.js")

        script(src="/js/main.js")
        
        link(rel="stylesheet", href="/css/font-awesome.css")
        link(rel="stylesheet", href="/css/bootstrap.min.css")
        //----------------------------//

        // Page stuff
        block head
    
    
    body
        .container
            +nav("OMP - Pannel")
                +nav_block_left()
                    +nav_item()
                        a.nav-link(href='/') Home 

                    if user
                        +nav_item()
                            a.nav-link(href='/missionnaires/add') Ajouter un missionnaire
                        +nav_item()
                            a.nav-link(href='/missions/add') Ajouter une mission 
                +nav_block_right()
                    if user
                        +nav_item_dropdown(user.name)
                            .dropdown-menu(aria-labelledby='navbarDropdown')
                                a.dropdown-item(href='/users/profile') Profil
                                .dropdown-divider
                                a.dropdown-item(href='/users/logout') Déconnexion
                    else
                        +nav_item()
                            a.nav-link(href='/users/login') Se connecter

            //Messages d'etat
            != messages('message', locals)

            //La page est insérée ici
            block content
            
            //Erreurs
            br
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}

            //Footer
            hr
            footer
                p Copyright &copy; 2020
