        .card.my-4.mb-5
            .card-header
                .row
                    .col
                        h4 Missionnaires
                    .col-auto
                        .input-group
                            .input-group-prepend
                                .input-group.col
                                    if missionnaires
                                        select.selectpicker(data-live-search="true", id="selecteurMissionnaire")
